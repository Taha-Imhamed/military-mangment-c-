<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sergeant's Dashboard</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: url('https://wallpaper-house.com/data/out/12/wallpaper2you_514549.jpg') no-repeat center center fixed;
            background-size: cover;
            color: white;
        }

        h1, h3 {
            color: green;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        }

        p, label {
            font-size: 16px;
            color: white;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
        }

        #assign-task {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 20px;
            margin: 20px auto;
            width: 80%;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.6);
        }

        input {
            padding: 10px;
            margin: 10px 0;
            width: 100%;
            border-radius: 5px;
            border: none;
            font-size: 16px;
        }

        button {
            background-color: #4d5c3d;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            margin-top: 10px;
            border-radius: 5px;
            font-size: 16px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);
        }

            button:hover {
                background-color: #5e7250;
            }
    </style>
</head>
<body>

    <h1>Sergeant's Dashboard</h1>
    <div id="assign-task">
        <h3>Assign a Task</h3>
        <label for="task-input">Task Description:</label>
        <input type="text" id="task-input" placeholder="Enter task details">

        <label for="soldier-name">Assign to Soldier:</label>
        <input type="text" id="soldier-name" placeholder="Enter soldier's name">

        <button onclick="assignTask()">Assign Task</button>
    </div>

    <script>
        function assignTask() {
            const task = document.getElementById('task-input').value;
            const soldierName = document.getElementById('soldier-name').value;

            if (!task.trim() || !soldierName.trim()) {
                alert('Please fill out both fields.');
                return;
            }

            // Save task and soldier name to local storage
            localStorage.setItem('assignedTask', task);
            localStorage.setItem('assignedTo', soldierName);

            alert(`Task assigned to ${soldierName}: "${task}"`);

            // Clear inputs
            document.getElementById('task-input').value = '';
            document.getElementById('soldier-name').value = '';
        }
    </script>

</body>
</html>

